@page
@model IndexModel
@{
    ViewData["Title"] = "TODO List";
}

<h1>TODO</h1>
<hr />

<table class="table">
    <tr>
        <th>
            Task
        </th>
        <th>
            Status
        </th>
        <th>
            Lifetime
        </th>
    </tr>
    @foreach (var item in Model.TodoItems)
    {
        <tr>
            <th>
                @item.Title
            </th>
            <th>
                @if (item.Complete){
                    <p>Complete</p>
                }
                else
                {
                    <p>Incomplete</p>
                }
            </th>
            <th>
                @Model.TimeAlive(item.CreationDate)
            </th>
        </tr>
    }
</table>
