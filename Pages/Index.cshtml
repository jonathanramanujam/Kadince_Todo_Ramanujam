@page
@using Microsoft.AspNetCore.Http
@model IndexModel
@{
    ViewData["Title"] = "TODO List";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<h1>TODO</h1>
<hr />

@*New Item Form*@
<form method="post">
    <div class="row g-2">
        <div class="col-auto">
            <button type="submit" asp-page-handler="CreateTodoItem" class="btn btn-primary" id="btnCreateTodoItem">&#10010;</button>
        </div>
        <div class="col-auto">
            <input asp-for="TodoItem.Title" class="form-control" style="width:200%"/>
            <span asp-validation-for="TodoItem.Title" class="text-danger"></span>
        </div>
    </div>
</form>
<hr />

@*Filters*@
<div class="btn-group gradient-buttons" id="btn-filters">
    <form method="post">
        <button type="submit" asp-page-handler="FilterTodoItems" class="btn btn btn-outline-secondary" id="btn-filter-all">Filter</button>
        @if (HttpContext.Session.GetInt32("_FilterAll") == 1)
        {
            <input type="checkbox" class="form-check-input" asp-for="FilterAll" checked/>          
        }
        else
        {
            <input type="checkbox" class="form-check-input" asp-for="FilterAll"/>
        }
        All
        @if (HttpContext.Session.GetInt32("_FilterComplete") == 1)
        {
            <input type="checkbox" class="form-check-input" asp-for="FilterComplete" checked />
        }
        else
        {
            <input type="checkbox" class="form-check-input" asp-for="FilterComplete" />
        }
        Complete
        @if (HttpContext.Session.GetInt32("_FilterIncomplete") == 1)
        {
            <input type="checkbox" class="form-check-input" asp-for="FilterIncomplete" checked />
        }
        else
        {
            <input type="checkbox" class="form-check-input" asp-for="FilterIncomplete" />
        }
        Incomplete
    </form>
</div>

@*Todo Item Cards*@
<div class="row-cols-md-3 row">
    @foreach (var item in Model.TodoItems)
    {
        <div class="card card-todo @string.Format("fComplete-"+ item.Complete)">
            @*Edit Card*@
            <div style="display:none" class="card-todo-edit" id="@string.Format("TodoEdit" + item.Id)">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TodoItem.Id" value="@item.Id"/>
                    <input type="hidden" asp-for="TodoItem.Complete" value="@item.Complete"/>
                    <input type="hidden" asp-for="TodoItem.CreationDate" value="@item.CreationDate"/>
                    @*Title*@
                    <div>
                        <input asp-for="TodoItem.Title" class="form-control m-1" value="@item.Title" />
                        <span asp-validation-for="TodoItem.Title" class="text-danger"></span>
                    </div>
                    @*Details*@
                    <div>
                        <input asp-for="TodoItem.Details" class="form-control m-1" value="@item.Details"/>
                        <span asp-validation-for="TodoItem.Details" class="text-danger"> </span>
                    </div>
                    <hr />
                    @*Save Button*@
                    <div class="btn-group gradient-buttons">
                        <button type="submit" asp-page-handler="EditTodoItem" class="btn btn-success" id="buttonSaveTodoItem">Save</button>
                    </div>
                </form>
            </div>
            @*Display*@
            <div class="card-todo-display" id="@string.Format("TodoDisplay" + item.Id)">
                @*Title*@
                <h5>
                    @if (item.Complete)
                    {
                        <s>@item.Title</s>
                    }
                    else
                    {
                        @item.Title
                    }
                </h5>
                @*Details*@
                <div class="text-secondary small">
                    @if (item.Complete)
                    {
                        <s>- @item.Details</s>
                    }
                    else
                    {
                        <p>- @item.Details</p>
                    }
                </div>
                <hr />
                <div class="row-cols-md-2">
                    <div class="btn-group gradient-buttons row-cols-md-3">
                        @*Complete Button*@
                        <div>
                            @if (item.Complete)
                            {
                                <form method="post">
                                    <label class="form-check-label">
                                        <input type="hidden" class="form-check-label" name="id" value="@item.Id" />
                                        <button type="submit" asp-page-handler="CompleteTodoItem" class="btn btn-success" asp-for="TodoItem.Complete">&#x2713;</button>
                                    </label>
                                </form>
                            }
                            else
                            {
                                <form method="post">
                                    <label class="form-check-label">
                                        <input type="hidden" class="form-check-label" name="id" value="@item.Id" />
                                        <button type="submit" asp-page-handler="CompleteTodoItem" class="btn btn-outline-secondary" asp-for="TodoItem.Complete">&mdash;</button>
                                    </label>
                                </form>
                            }
                        </div>
                        @*Edit Button*@
                        <div>
                            <button onclick="EditTodoItem(@item.Id)" class="btn btn-warning" id="btnEditTodoItem">&#9998;</button>

                        </div>
                        @*Delete Button*@
                        <div>
                            <form method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" asp-page-handler="DeleteTodoItem" class="btn btn-danger" id="btnDeleteTodoItem">&#10008;</button>
                            </form>
                        </div>
                    </div>
                    @*Lifetime Tracker*@
                    <div class="text-secondary small text-right">
                        @Model.TimeAlive(item.CreationDate)
                    </div>
                </div>
            </div>
        </div>
    }
</div>
